pipeline {
    agent any

    stages {
        stage('Chekout') {
            steps {
                git url: 'https://github.com/KatzoArano/API-dnt2023', branch: 'main'
                echo 'Checkout Completed'
            }
        }
           stage('Build') {
            steps {
                sh 'chmod +x ./back/cicd/build.sh'
                echo 'Building..'

            }
        }
        stage('Test') {
            steps {
                sh 'chmod +x ./back/cicd/test.sh'
                echo 'Testing..'

            }
        }
        stage('Deploy') {
            steps {
                sh 'chmod +x ./back/cicd/deploy.sh'
                echo 'Deploying....'
            }
        }
    }
}