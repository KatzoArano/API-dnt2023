pipeline {
    agent any

    tools {nodejs "NodeJS"}

    stages {
        stage('Chekout') {
            steps {
                git url: 'https://github.com/KatzoArano/API-dnt2023', branch: 'main'
                echo 'Checkout Completed'
            }
        }
           stage('Build') {
            steps {
                sh 'npm install'
                echo 'Building..'

            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
                echo 'Testing..'

            }
        }
        stage('Deploy') {
            steps {
                sh 'npm run start'
                echo 'Deploying....'
            }
        }
    }
}